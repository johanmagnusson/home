#!/bin/bash

USER_PS1="${COLOR_DEFAULT}\u${COLOR_LIGHT_GRAY}@${COLOR_PROMPT}\h${COLOR_DEFAULT} : ${COLOR_LIGHT_GRAY}\w${COLOR_DEFAULT}\n\\$ "
ROOT_PS1="${COLOR_DEFAULT}\u${COLOR_LIGHT_GRAY}@${COLOR_PROMPT}\h${COLOR_DEFAULT} : ${COLOR_LIGHT_GRAY}\w${COLOR_LIGHT_RED}\n\\$ ${COLOR_DEFAULT}"
NOCOLOR_PS1="\u@\h : \w \n\$ "

