#!/bin/bash

# prompt color
COLOR_PROMPT=$COLOR_RED

# home brewed scripts
export SCRIPT_PATH="${HOME}/Applications/scripts"

# apache ant
export ANT_HOME="${HOME}/Libraries/ant"
export ANT_LIB="${ANT_HOME}/lib"
export ANT_OPTS="-XX:MaxPermSize=256m"

# maven
export MAVEN_HOME="${HOME}/Libraries/maven"

# gradle
export GRADLE_HOME="${HOME}/Libraries/gradle"

# mysql
export MYSQL_HOME="${HOME}/Applications/mysql"

# java
export JDK_HOME="${HOME}/Libraries/java"
export JAVA_HOME="${JDK_HOME}/jre"

export PATH="${JAVA_HOME}/bin:${GRADLE_HOME}/bin:${MYSQL_HOME}/bin:${ANT_HOME}/bin:${MAVEN_HOME}/bin:${SCRIPT_PATH}:${PATH}"
